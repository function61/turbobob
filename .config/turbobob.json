{
	"$schema": "https://raw.githubusercontent.com/function61/turbobob/refs/heads/main/pkg/bobfile/bobfile.schema.json",
	"for_description_of_this_file_see": "https://github.com/function61/turbobob",
	"version_major": 1,
	"project_name": "turbobob",
	"project_emoji_icon": "ðŸ¦¦",
	"builders": [
		{
			"name": "default",
			"uses": "docker://fn61/buildkit-golang:20251124_1405_720e0dc0",
			"commands": {
				"build": ["build-go-project.sh", "--directory=cmd/bob/", "--binary-basename=bob"],
				"dev": ["bash"]
			},
			"mount_destination": "/workspace",
			"workdir": "/workspace"
		},
		{
			"name": "publisher",
			"uses": "docker://fn61/buildkit-publisher:20200228_1755_83c203ff",
			"mount_destination": "/workspace",
			"commands": {
				"publish": ["bash", "-c", "rm -f rel/.dummy_file_to_make_dir_not_empty && publish-gh.sh function61/turbobob rel/"],
				"dev": ["bash"]
			},
			"pass_envs": [
				"GITHUB_TOKEN",
				"EVENTHORIZON"
			]
		}
	],
	"docker_images": [
		{
			"image": "ghcr.io/function61/turbobob",
			"platforms": ["linux/amd64"]
		}
	],
	"os_arches": {
		"linux-amd64": true,
		"linux-arm": true
	}
}
